{
  "name": "@kb-labs/setup-operations",
  "version": "0.1.0",
  "description": "Typed operations and builder primitives for KB Labs setup workflows.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/kirill-baranov/kb-labs-setup-engine.git",
    "directory": "packages/setup-operations"
  },
  "bugs": {
    "url": "https://github.com/kirill-baranov/kb-labs-setup-engine/issues"
  },
  "homepage": "https://github.com/kirill-baranov/kb-labs-setup-engine/tree/main/packages/setup-operations",
  "keywords": [
    "kb-labs",
    "setup",
    "operations",
    "builder",
    "idempotent"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup",
    "dev": "tsup --watch",
